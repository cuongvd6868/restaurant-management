@model List<RestaurantManagement.Models.FoodOrder>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h2>Danh sách đơn hàng</h2>
<div class="order_view">
    <div class="container">
        <table class="order_table">
            <thead>
                <tr>
                    <th>Total Price</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Payment Method</th>
                    <th>Order Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.TotalPrice.ToString("N0")</td>
                        <td>@order.Address</td>
                        <td>@order.Status</td>
                        <td>@(order.PaymentMethodID == 1 ? "Credit Card" : "Other")</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
