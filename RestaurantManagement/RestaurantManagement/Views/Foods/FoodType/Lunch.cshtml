@using RestaurantManagement.ViewModel;
@using RestaurantManagement.DTOs;

@model PagedListAPI<FoodViewModel>




<!-- Breakfast -->
<div class="menu-hero">
    <div class="container">
        <h2 class="title">Lunch</h2>
        <img src="~/img/Icon/decor-rec.svg" alt="" class="decor-rec">
        <div class="menu-list">
            @foreach (var food in Model.Items)
            {
                <div class="menu-item">
                    <div class="menu-hero_thumb">
                        <div class="heart-container">
                            <form action="">
                                <button type="submit"><img src="~/img/Icon/heart.svg" alt=""></button>
                            </form>
                        </div>
                        <img src="@food.FoodLink" alt="" class="food-img">
                    </div>
                    <a href="https://localhost:7081/api/foods/FoodDetail/@food.FoodID" style="color: #fff">
                        <h3 class="food-name">@food.FoodName</h3>
                    </a>
                    <p class="food-desc">@food.Description</p>
                    <hr>
                    <div class="food-action">
                        <a href="javascript:void(0);"
                           class="add-to-cart_btn"
                           data-food-id="@food.FoodID"
                           data-price="@food.Price">
                            Add To Cart
                        </a>
                        <p class="price">@food.Price.ToString("C")</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>