@using RestaurantManagement.ViewModel;
@using RestaurantManagement.DTOs;

@model PagedListAPI<FoodViewModel>

<h2>Danh sách món ăn</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên món ăn</th>
            <th>Mô tả</th>
            <th>Giá niêm yết</th>
            <th>Giá bán</th>
            <th>Danh mục</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model.Items)
        {
            <tr>
                <td>@food.FoodName</td>
                <td>@food.Description</td>
                <td>@food.ListPrice.ToString("C")</td>
                <td>@food.Price.ToString("C")</td>
                <td>@food.FoodCategoryName</td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang -->
<div>
    @if (Model.HasPreviousPage)
    {
        <a href="/Food/Index?cateId=1&pageNumber=@(Model.PageNumber - 1)&pageSize=@Model.PageSize">Previous</a>
    }
    @if (Model.HasNextPage)
    {
        <a href="/Food/Index?cateId=1&pageNumber=@(Model.PageNumber + 1)&pageSize=@Model.PageSize">Next</a>
    }
</div>